.fechar-menu
    position: absolute
    right 10px
    top 10px
    cursor pointer
    img 
        max-width 40px
.menu-mob-flutuante
    display flex
    width: 100%
    height 100%
    position: fixed
    z-index 999999999
    top 0
    left 0;
    justify-content: center
    background-color alpha(white, 0.9)
.display-menu-mob
    flex-direction: column
    display: flex
    align-self: center
    justify-content: flex-end
    padding: 0

    li
        list-style: none
        text-align: center
        font-size: 18px
        text-transform: uppercase
        margin-top 10px
        a
            text-decoration: none
            color: #5c5b5c
            transition: .3s
            &:hover
                color: $colors['main']
                font-weight: bold
            &.ativo
               color: $colors['main']
               font-weight: bold
.display-menu
    padding: 0
    margin 0
    display: flex
    justify-content: flex-end
    li
        list-style: none
        text-transform: uppercase
        margin-right: 25px
        font-size: 14px
        letter-spacing: -0.4px
        &:last-child
            margin-right: 0
        a
            text-decoration: none
            color: #1f4052
            transition: .3s
            &:hover
                color: $colors['main']
                font-weight: bold
            &.ativo
               color: $colors['main']
               font-weight: bold
.menu-mob
    cursor pointer
    span.icon-bar
        margin-top 4px
        width: 30px
        height 4px
        display: block
        border-radius 3px
        background-color: $colors['second']

.teaser
    animation: piscar 1.5s infinite



@media screen and (max-width: $queries['medium'])
    .display-menu
        li
            margin-right: 20px
            font-size: 14px
@media screen and (max-width: $queries['small'])
    .display-menu
        li
            margin-right: 15px
            font-size: 14px





